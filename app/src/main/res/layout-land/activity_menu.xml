<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0000"
    android:orientation="vertical"
    android:padding="25dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="356dp"
        android:layout_height="142dp"
        android:layout_gravity="center"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:text="@string/checkourmenu"
        android:textColor="@color/white"
        android:textSize="45sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/bigMac"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:padding="8dp"
            android:background="@drawable/border"
            android:scaleType="centerCrop"
            android:src="@drawable/bigmac" />

        <ImageButton
            android:id="@+id/fries"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/border"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fries1"
            android:visibility="visible" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/nuggets"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/border"
            android:padding="32dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/nuggets" />

        <ImageButton
            android:id="@+id/coke"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:padding="8dp"
            android:background="@drawable/border"
            android:scaleType="fitCenter"
            android:src="@drawable/coke" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/icecream"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:padding="8dp"
            android:background="@drawable/border"
            android:scaleType="fitCenter"
            android:src="@drawable/mcicecream" />

        <ImageButton
            android:id="@+id/water"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/border"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/water" />
    </LinearLayout>
</LinearLayout>