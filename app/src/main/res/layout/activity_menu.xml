<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0000"
    android:orientation="vertical"
    android:padding="15dp">


    <ImageButton
        android:id="@+id/water"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/water"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/coke"
        app:layout_constraintTop_toBottomOf="@+id/fries"
        app:layout_constraintVertical_bias="0.017"
        tools:src="@drawable/water"
        tools:srcCompat="@drawable/water"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/icecream"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="272dp"
        android:background="#FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/mcicecream"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0"
        tools:src="@drawable/mcicecream"
        tools:srcCompat="@drawable/mcicecream"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/coke"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="#FFFCFC"
        android:scaleType="centerCrop"
        android:src="@drawable/coke"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/water"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bigMac"
        app:layout_constraintVertical_bias="0.01999998"
        tools:src="@drawable/coke"
        tools:srcCompat="@drawable/coke"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/bigMac"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="8dp"
        android:background="#FFFCFC"
        android:scaleType="centerCrop"
        android:src="@drawable/bigmac"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fries"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.051"
        tools:src="@drawable/bigmac"
        tools:srcCompat="@drawable/bigmac"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/fries"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="8dp"
        android:background="#FFFCFC"
        android:scaleType="centerCrop"
        android:src="@drawable/fries1"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bigMac"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.054"
        tools:src="@drawable/fries1"
        tools:srcCompat="@drawable/fries1"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="356dp"
        android:layout_height="142dp"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:text="@string/checkourmenu"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>